@model Ienei_Csongor_Attila_Proiect_ASP_NET.Pages.CarsPage.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].ProdDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Sales)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Sales.SalesName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Dealership)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cars[0].Dealership.DealershipName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Cars) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Model)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProdDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sales.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sales.SalesName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dealership.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dealership.DealershipName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
